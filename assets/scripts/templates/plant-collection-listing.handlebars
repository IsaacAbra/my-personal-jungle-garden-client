  {{#each plantCollections as |plantCollection|}}
    {{log plantCollection}}
    <section data-id="{{plantCollection._id}}">
      <h3 data-id="{{plantCollection._id}}" class="pc pointer">
        {{#if plantCollection.name}}
          {{plantCollection.name}}
        {{else}}
          My Plant Collection
        {{/if}}
      </h3>
      <button data-id="{{plantCollection._id}}" class="btn-pc-delete btn-danger delete-pc-button">Delete</button>
    </section>
    {{/each}}

    {{#each plants as |plant|}}
      {{log plant}}
      <section data-id="{{plant._id}}">
        <div data-id="{{plant._id}}" class="plant pointer">
          {{#if plant.name}}
            {{plant.name}}
          {{else}}
            New Plant
          {{/if}}
        </div>
        <button data-id="{{plant._id}}" class="btn-plant-delete btn-danger delete-plant-button">Delete</button>
      </section>
    {{/each}}
