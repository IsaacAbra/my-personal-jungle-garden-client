
  <section data-id="{{plantCollection._id}}" class="pc-name-header">
    <h2 data-id="{{plantCollection._id}}">
      {{#if plantCollection.name}}
        {{plantCollection.name}}
      {{else}}
        My Plant Collection
      {{/if}}
    </h2>

    {{#each plantCollection.plants as |plant|}}

      <section data-id="{{plant._id}}">
        <h4 data-id="{{plant._id}}" class="plant pointer plant-listing">
        {{#if plant.nickName}}
          {{plant.nickName}}
        {{else}}
          {{plant.name}}
        {{/if}}
        </h4>

        <button data-id="{{plant._id}}" class="btn-plant-delete btn-danger delete-plant-button">Delete</button>
      </section>
    {{/each}}

  </section>
